@model WebAuslink.Models.IssueBoard

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>IssueBoard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IssueTitle" class="control-label"></label>
                <input asp-for="IssueTitle" class="form-control" />
                <span asp-validation-for="IssueTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhoRaisedThisIssue" class="control-label"></label>
                <input asp-for="WhoRaisedThisIssue" class="form-control" />
                <span asp-validation-for="WhoRaisedThisIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <div class="form-group">
                    <label asp-for="issueDescription" class="control-label"></label>
                    <div class="input-group-prepend">
                        <span class="input-group-text">Description</span>
                    </div>
                    <textarea asp-for="issueDescription" class="form-control" aria-label="With textarea" required></textarea>
                </div>



                <span asp-validation-for="issueDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IfIssueIsSolved" /> @Html.DisplayNameFor(model => model.IfIssueIsSolved)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="WhoSolvedIssue" class="control-label"></label>
                <input asp-for="WhoSolvedIssue" class="form-control" />
                <span asp-validation-for="WhoSolvedIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

