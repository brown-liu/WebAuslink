
@{
    Layout = null;
}


<div class="container-fluid">
    <table class="table table-striped"   cellspacing="0">
        <h3 style="text-align:center"> Sea Container In bound this Week </h3>
        <thead style="white-space:nowrap; font-size:0.8vw;">
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    PO No.
                </th>
                <th scope="col">
                    <a>Day 2 Yard</a>
                </th>
                <th scope="col">
                    Client
                </th>
                <th scope="col">
                    Destination Yard
                </th>

                <th scope="col">
                    CONTAINER No. / CAP
                </th>
                <th scope="col">
                    Commodity
                </th>


                <th scope="col">
                    Handler
                </th>
                <th scope="col">
                    Others
                </th>
            </tr>
        </thead>
        
        <tbody style="white-space:nowrap; font-size:0.8vw;">
            @{
                var count = 0;

                @foreach (var item in ViewBag.InboundThisWeek)
                {
                    string ToYard = "N/A";
                    if (@item.TimeToYard != null)
                    {
                        ToYard = ((DateTime)item.TimeToYard).ToString("ddd dd MMMM");
                    }
                    count += 1;

            <tr>
                <td scope="row">
                    @count
                </td>

                <td>
                    @item.CCPONumber
                </td>
                <td>
                    @ToYard
                </td>
                <td>
                    @item.ClientCompanyName
                </td>
                <td>
                    @item.DestinationSite
                </td>

                <td>
                    @item.ContainerNumber
                </td>
                <td>
                    @item.Commodity
                </td>



                <td>
                    @item.HandlerName
                </td>

                <td>
                    @{
                        if (@item.IfRequireDelivery)
                        {
                            <span class="badge badge-success" style="font-size: 0.9vw">Deliver</span>
                        }
                        if (@item.IfRequireStorage)
                        {
                            <span class="badge badge-success" style="font-size: 0.9vw">Storage</span>
                        }
                        if (item.Reference)
                        {
                            <span class="badge badge-danger" style="font-size: 0.9vw">Inspection</span>
                        }

                    }



                </td>


            </tr>
                }}

        </tbody>
        
    </table>
</div>
        


