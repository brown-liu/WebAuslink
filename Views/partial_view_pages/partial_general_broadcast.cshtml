

<div class="container-fluid">
    <h3 style="text-align:center;">Notice Board</h3>
    <div class="row">

        <div class="col-lg-4">

           
                        <ul class="list-group">

                            @foreach (var item in ViewBag.ClientOnHOld)
                            {
                            <li class="list-group-item list-group-item-danger">Stop Service reminder :  @item.ClientCompanyName   </li>
                            }

                        </ul>


        </div>


        <div class="col-lg-8">
            @{



                {
                    foreach (var item in ViewBag.PlanToday)
                    {
                        
                        <ul class="list-group">
                                        
                            <li class="list-group-item" style="white-space:pre-wrap;font-size:1vw;"><strong>Work this Morning<br/></strong>@item.MorningJob   </li>
                            <li class="list-group-item" style="white-space:pre-wrap;font-size:1vw;"><strong>Work this Afternoon<br/></strong>@item.AfternoonJob   </li>
                            <li class="list-group-item" style=" white-space: pre-wrap;font-size: 1vw;"><strong>Extra<br /></strong>@item.ExtraWork   </li>

                        </ul>


                    }



                }
            }
        </div>



    </div>

</div>
